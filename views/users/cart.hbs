<div class="container mt-10">
    <div class="card">
        <div class="row">
            <div class="col-md-8 cart">
                <div class="title">
                    <div class="row">
                        <div class="col">
                            <h4><b>Shopping Cart</b></h4>
                        </div>
                        <div class="col align-self-center text-right text-muted">{{cart.items.length}} items</div>
                    </div>
                </div>
                {{#if cart.items.length}}
                {{#each cart.items}}
                <div class="row main align-items-center">
                    <div class="col-2"><img style="width: 3.5rem;" class="img-fluid"
                            src="/uploads/{{this.product.image}}"></div>
                    <div class="col">
                        <div class="row text-muted">{{this.product.name}}</div>
                        <div class="row">{{this.product.category}}</div>
                    </div>
                    <div class="col">
                        <a href="/cart/decrease/{{this.product._id}}" class="quantity-btn"
                            data-productid="{{this.product._id}}" data-action="decrement">-</a>
                        <a href="#" class="border">{{this.quantity}}</a>
                        <a href="/cart/increase/{{this.product._id}}" class="quantity-btn"
                            data-productid="{{this.product._id}}" data-action="increment">+</a>


                    </div>

                    <div class="col">&euro; {{this.product.price}}<span class="close">
                            <a href="/removeItem/{{this.product._id}}" style="color: #000;"
                                data-productid="{{this.product._id}}">&#10005; Remove</a></span></div>
                </div>
                {{/each}}
                {{else}}
                <!-- Display a message when the cart is empty -->
                <p>No items in the cart.</p>
                {{/if}}

                <div class="back-to-shop"><a href="/">&leftarrow;</a><span class="text-muted">Back to shop</span></div>
            </div>

