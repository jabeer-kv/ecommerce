{{> user_header}}

<div class="row justify-content-center mb-3">
  {{#if wishlist}}
  {{#each wishlist}}
  <div class="col-md-12">
    <div class="card shadow-lg border rounded-3 p-2 m-5">
      <div class="card-body">
        <div class="row g-0">
          <div class="col-xl-3 col-md-4 d-flex justify-content-center">
            <div class="bg-image hover-zoom ripple rounded ripple-surface me-md-3 mb-3 mb-md-0">
              <img src="/uploads/{{this.product.image}}" alt="{{this.product.name}}" class="w-100"
                style="width: 180px; height: 196px" />
              <a href="#!">
                <div class="hover-overlay">
                  <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                </div>
              </a>
            </div>
          </div>
          <div class="col-xl-6 col-md-5 col-sm-7">
            <a href="#" style="text-decoration: none;">
              <h4>{{this.product.name}}</h4>
            </a>
            <br>
            <div class="d-flex flex-row align-items-center mb-1">
              <h4 class="mb-1 me-1">₹{{this.product.price}}</h4>
              {{!-- <span class="text-dark" style="text-decoration: line-through;">₹{{this.price}}</span> --}}
            </div>
          </div>
          <div class="col-xl-3 col-md-3 col-sm-5">
            
            <div class="mt-4">
              <a href="/removewish/{{this.product._id}}" class="btn btn-light border px-2 pt-2 add-to-wishlist-button"
                data-product-id="{{this.product._id}}"><i class="fa-solid fa-trash fa-bounce fa-xl"
                  style="color: #000000;"></i></a>
            </div>
            <div class="input-group product-qty">

                <a href="/addpro/{{this._id}}" class="btn btn-primary mr-2">Add to Cart</a>
                
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
  {{else}}
  <div class="col-md-12 mt-5" style="height: 225px;">
    <div class="card border-rounded shadow p-5 m-4">
      <div class="card-body">
        <h3 class="card-title">No wishlist items</h3>
      </div>
    </div>
  </div>
  {{/if}}
</div>

{{> user_footer}}



<script src="https://kit.fontawesome.com/d79b7af11d.js" crossorigin="anonymous"></script>

