<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta http-equiv="x-ua-compatible" content="ie=edge" />
  <title>Material Design for Bootstrap</title>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css" />
  <!-- Google Fonts Roboto -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" />
  <!-- MDB -->
  <link rel="stylesheet" href="css/mdb.min.css" />
  <!-- Custom styles -->
  <link rel="stylesheet" href="public/css/checkout.css" />
</head>

<body>
  {{> user_header}}

  <!-- Checkout -->
  <div class="container mt-5">
   <div class="card shadow-0 border p-4">
  <h5 class="card-title mb-3">Checkout</h5>
  <div class="row">
    <div class="col-md-6 mb-3">
      <label for="firstName" class="form-label">First Name</label>
      <input type="text" class="form-control" id="firstName" placeholder="Type here" required>
    </div>
    <div class="col-md-6 mb-3">
      <label for="lastName" class="form-label">Last Name</label>
      <input type="text" class="form-control" id="lastName" placeholder="Type here" required>
    </div>
    <div class="col-md-6 mb-3">
      <label for="phone" class="form-label">Phone</label>
      <input type="tel" class="form-control" id="phone" value="+48" required>
    </div>
    <div class="col-md-6 mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" placeholder="example@gmail.com" required>
    </div>
    <div class="col-md-6 mb-3">
      <label for="landmark" class="form-label">Landmark</label>
      <input type="text" class="form-control" id="landmark" placeholder="Type here" required>
    </div>
    <div class="col-md-6 mb-3">
      <label for="pincode" class="form-label">Pincode</label>
      <input type="text" class="form-control" id="pincode" required>
    </div>
    <div class="col-md-6 mb-3">
      <label for="address" class="form-label">Address</label>
      <input type="text" class="form-control" id="address" required>
    </div>
    <div class="col-md-6 mb-3">
        <label for="city" class="form-label">City</label>
        <select class="form-select" id="city" required>
          <option value="1">kannur</option>
          <option value="2">calicut</option>
          <option value="3">kasargode</option>
        </select>
      </div>
  </div>
</div>


    <div class="form-check mb-3">
      <input class="form-check-input" type="checkbox" value="" id="keepMeUpdated">
      <label class="form-check-label" for="keepMeUpdated">Keep me up to date on news</label>
    </div>

     <!-- Display Cart Items -->
    <div class="row mt-4">
      <div class="col-md-12">
        <h6>Cart Items:</h6>
        <ul class="list-group">
          {{#each cart.items}}
            <li class="list-group-item">
              <span>{{this.quantity}}x</span>
              <div class="d-flex align-items-center">
                <img src="/uploads/{{this.product.image}}" alt="{{this.product.name}}" class="img-thumbnail mr-3" style="max-width: 50px;">
                <div>
              {{!-- <strong>{{this.product.name}}</strong> --}}
              <span>${{this.product.price}} each</span>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="form-check mb-3">
      <input class="form-check-input" type="checkbox" value="" id="saveAddress">
      <label class="form-check-label" for="saveAddress">Save this address</label>
    </div>

    <div class="d-flex justify-content-end">
      <a href="/cart" class="btn btn-light border me-2">Cancel</a>
      <a  href="/checkoutdata" class="btn btn-success shadow-0 border">Continue</a>
    </div>
  </div>
</div>
  <!-- Checkout -->

  <!-- Summary Section -->
  <div class="container mt-5">
    <!-- Your existing HTML code for the summary section goes here -->
  </div>
  <!-- Summary Section -->

  <!-- MDB -->
  <script type="text/javascript" src="js/mdb.min.js"></script>
  <!-- Custom scripts -->
  <script type="text/javascript" src="public/js/checkout.js"></script>

  {{> user_footer}}

</body>

</html>